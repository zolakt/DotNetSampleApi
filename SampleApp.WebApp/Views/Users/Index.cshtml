@model SampleApp.WebApp.ViewModels.Users.IndexViewModel

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>
@if (Model.Users.Any())
{
    <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>City</th>
            <th colspan="2"></th>
        </tr>
        @foreach (var item in Model.Users)
        {
            <tr>

                <td>@item.LastName @item.FirstName</td>

                <td>@item.Country</td>

                <td>@item.City</td>

                <td>
                    <a href="@Url.Action("Update", "Users", new { id = item.Id })">
                        <i class="glyphicon glyphicon-edit"></i> Edit
                    </a>
                </td>

                <td>
                    <a href="@Url.Action("Delete", "Users", new { id = item.Id })" class="delete-btn">
                        <i class="glyphicon glyphicon-remove"></i> Delete
                    </a>
                </td>

            </tr>
        }
    </table>
} else
{
    <p>No users</p>
}

<div>
    <a class="btn btn-success" href="@Url.Action("Create", "Users")">Add new user</a>
</div>